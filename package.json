  "bugs": {
    "url": "https://github.com/zoltan-dulac/text-zoom-resize/issues"
  },
  "homepage": "https://github.com/zoltan-dulac/text-zoom-resize#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "babel-minify": "^0.5.0",
    "babel-preset-minify": "^0.5.0"
  }
}
